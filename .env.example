# ============================================================
# Clinical Trial Control Tower - Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env or real secrets to version control.
# ============================================================

# Django Configuration
# --------------------
# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DEBUG=True
SECRET_KEY=YOUR_DJANGO_SECRET_KEY_HERE
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (SQLite for development)
# ------------------------------------------------
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (production):
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=clinical_trial_db
# DB_USER=postgres
# DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
# DB_HOST=localhost
# DB_PORT=5432

# Security Settings (enable in production)
# -----------------------------------------
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# ============================================================
# AI API KEYS (Required for AI features)
# ============================================================
# IMPORTANT: Set these keys to enable AI-powered features.
# If not set, AI features will gracefully degrade to rule-based fallbacks.
# Never commit real API keys - always use environment variables.
#
# Get your keys from:
# - Anthropic (Claude): https://console.anthropic.com/
# - OpenAI: https://platform.openai.com/api-keys
# ============================================================

# Anthropic Claude API Key (for GenAI features)
# Required for: AI suggested actions, query suggestions, risk assessments
# Format: sk-ant-api03-...
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE

# OpenAI API Key (optional, for future integrations)
# Format: sk-...
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# ============================================================
# Blockchain Configuration (Optional)
# ============================================================
BLOCKCHAIN_NETWORK=http://127.0.0.1:8545
BLOCKCHAIN_PRIVATE_KEY=YOUR_BLOCKCHAIN_PRIVATE_KEY_HERE
BLOCKCHAIN_CONTRACT_ADDRESS=

# ============================================================
# Celery Configuration (for async tasks)
# ============================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================
# Email Configuration (for password reset)
# ============================================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=YOUR_EMAIL_APP_PASSWORD_HERE

# ============================================================
# AWS Configuration (optional, for file storage)
# ============================================================
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE
AWS_STORAGE_BUCKET_NAME=clinical-trial-docs
AWS_S3_REGION_NAME=us-east-1

# ============================================================
# Encryption Keys (generate for production)
# ============================================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_HERE
DATABASE_ENCRYPTION_KEY=YOUR_DATABASE_ENCRYPTION_KEY_HERE

# ============================================================
# Application Settings
# ============================================================
PAGINATION_PAGE_SIZE=50
MAX_UPLOAD_SIZE=10485760
DATA_RETENTION_DAYS=2555
